<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
      <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="javascripts/bootstrap.min.js"></script>


  <header>

      <div class="navbar navbar-default navbar-fixed-top text-uppercase">
          <div class="container">
              <div class="navbar-header">
                  <a href="/" class="navbar-brand">Club Poopie</a>
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
              </div>
              {{#if user}}
                  <div class="navbar-collapse collapse">
                      <ul class="nav navbar-nav navbar-right">
                          {{#if isAdmin}}
                              <!--Admin functions-->
                          {{/if}}
                          <li><a href="#">Welcome {{user.fullName}}</a></li>
                          <li><a href="/logout">Logout</a></li>
                          <li><a class="bg-success" href="/game">Play now</a></li>
                      </ul>
                  </div>
              {{/if}}
              {{#unless user}}
                  <div class="navbar-collapse collapse">
                      <ul class="nav navbar-nav navbar-right">
                          <li><a href="/register">Sign up</a></li>
                          <!--<li><a href="/login">Login</a></li>-->
                          <li><a class="bg-success" href="/login">Play now</a></li>
                      </ul>
                  </div>
              {{/unless}}
          </div>
      </div>
  </header>


  {{#if error }}
      <div class="container">
          <div class="alert alert-danger">
              <strong>Error:</strong> {{error}}
          </div>
      </div>
  {{/if}}

  <div class="container">
      {{{body}}}
  </div>
  </body>
</html>
